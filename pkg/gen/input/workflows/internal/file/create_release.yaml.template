{{{{ .Header }}}}
name: Create Release
on:
  push:
    branches:
      - 'legacy'
      - 'main'
      - 'master'
      - 'release-v*.*.x'
      # "!" negates previous positive patterns so it has to be at the end.
      - '!release-v*.x.x'

jobs:
  publish:
    uses: giantswarm/github-workflows/.github/workflows/create-release.yaml@40b94d81af802accd14fcd65d4ff7a8347275e1c
    secrets:
      TAYLORBOT_GITHUB_ACTION: ${{ secrets.TAYLORBOT_GITHUB_ACTION }}
