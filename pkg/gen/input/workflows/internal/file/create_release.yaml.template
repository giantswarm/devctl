{{{{ .Header }}}}
name: Create Release
on:
  push:
    branches:
      - 'legacy'
      - 'main'
      - 'master'
      - 'release-v*.*.x'
      # "!" negates previous positive patterns so it has to be at the end.
      - '!release-v*.x.x'

jobs:
  publish:
    uses: giantswarm/github-workflows/.github/workflows/create-release.yaml@b58c650fb0f34858ba9f2c1e45eee3392ce0cf26
    secrets:
      TAYLORBOT_GITHUB_ACTION: ${{ secrets.TAYLORBOT_GITHUB_ACTION }}
