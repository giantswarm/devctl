name: Validate changelog

on:
  pull_request:
    types: [opened, synchronize, reopened]
    paths:
      - 'CHANGELOG.md'

permissions: {}

jobs:
  validate-changelog:
    uses: giantswarm/github-workflows/.github/workflows/validate-changelog.yaml@main
    permissions:
      contents: read
      pull-requests: write
