{{{{ .Header }}}}

name: Publish TechDocs
on:
  push:
    paths:
      - 'README.md'
      - 'docs/**'
      - 'helm/**/README.md'
    branches:
      - main
      - master
  workflow_dispatch: {}

jobs:
  publish:
    uses: giantswarm/github-workflows/.github/workflows/publish-techdocs.yaml@6bacf73d582b8088d41b8eaec469c40c14398081
    secrets:
      aws_access_key_id: ${{ secrets.TECHDOCS_S3_ACCESS_KEY_ID }}
      aws_secret_access_key: ${{ secrets.TECHDOCS_S3_SECRET_ACCESS_KEY }}
